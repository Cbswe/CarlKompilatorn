Package
	lexAndParse;

Helpers
	tab = 9;
  	cr = 13;
  	lf = 10;
  	digit = ['0'..'9'];
  	lowercase = ['a'..'z'];
  uppercase = ['A'..'Z'];
  letter = lowercase | uppercase;
  idletter = letter | '_';
  idchar  = letter | '_' | digit;
  eol   = cr | lf | cr lf;
	
Tokens
	
	
	
	int_lit = '0'|['1'..'9']['0'..'9']*;
	
	long_lit = '0'|['1'..'9']['0'..'9']*['l'+'L']; 

	
  	blank = (' ' | tab | eol)+;
	
	l_par = '(';
 	r_par = ')';
 	l_sq = '[';
 	r_sq = ']';
 	l_m = '{';
 	r_m = '}';
 	dot = '.';
 	new = 'new';
 	exl = '!';
 	length = 'length';
 	true = 'true';
 	false = 'false';
 	this = 'this';
 	int = 'int';
 	comma = ',';
 	int_arr = 'int[]';
 	boolean = 'boolean';
 	if = 'if';
 	else = 'else';
 	while = 'while';
 	sysout = 'System.out.println';
 	eq = '=';
 	smc = ';';
 	public = 'public';
 	return = 'return';
 	classtag = 'class';
 	static = 'static';
 	void = 'void';
 	main = 'main';
 	string = 'String';
			
	op = 	'&&' |
			'<' |
			'+' |
			'-' |
			'*'
			;
			
	
	id = idletter idchar*;
	
Ignored Tokens
	blank;
	


Productions
	program = mainclass classdecl*;
	
	mainclass = classtag [classname]:id [outer_l]:l_m public static void main l_par string [arr_l]:l_sq [arr_r]:r_sq [mainargname]:id r_par [inner_l]:l_m vardecl* stmt* [inner_r]:r_m [outer_r]:r_m;

	classdecl = classtag id l_m  vardecl* methoddecl* r_m;
	
	vardecl = type id smc;
	
	methoddecl = public type id l_par formallist r_par l_m vardecl* stmt* return exp smc r_m;
	
	formallist = type id formalrest*;
	
	formalrest = comma type id;

	type = 	{int_arr} int_arr |
			{boolean} boolean |
			{int} int |
			{id} id;
			
	stmt = 	{stmts}	l_m stmt r_m |
			{if} if l_par exp r_par [iftrue]:stmt else [iffalse]:stmt |
			{while} while l_par exp r_par stmt |
			{sysout} sysout l_par exp r_par smc |
			{assign} id eq exp smc |
			{idx_acs} id l_sq [idx]:exp r_sq eq [assgn]:exp smc;

	exp = 	{doop} [assgnto]:hexp op [assgnfrom]:hexp |
			{access_idx} [obj]:hexp l_sq [idx]:hexp r_sq |
			{getlength} hexp dot length |
			{method_call} hexp dot id l_par explist r_par|
			{negate} exl exp |
			hexp
			;

			
	hexp = {int_lit} int_lit |
			{true} true |
			{false} false |
			{id} id |
			{this} this |
			{int_arr} new int l_sq exp r_sq |
			{constructor} new id l_par r_par |
			
			{paranthesis} l_par exp r_par
			;
			
	explist = exp exprest*;
	exprest = comma exp;
	
	
	
	
	
	
	
	
	
	
 	
	
	

	